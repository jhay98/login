  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "AuthAPI Health (direct)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{authBaseUrl}}/health",
              "host": [
                "{{authBaseUrl}}"
              ],
              "path": [
                "health"
              ]
            }
          },
          "response": []
        },
        {
          "name": "AuthAPI Health (gateway)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{gatewayBaseUrl}}/api/health",
              "host": [
                "{{gatewayBaseUrl}}"
              ],
              "path": [
                "api",
                "health"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\",\n  \"firstName\": \"{{firstName}}\",\n  \"lastName\": \"{{lastName}}\"\n}"
            },
            "url": {
              "raw": "{{authBaseUrl}}/api/register",
              "host": [
                "{{authBaseUrl}}"
              ],
              "path": [
                "api",
                "register"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
            },
            "url": {
              "raw": "{{authBaseUrl}}/api/login",
              "host": [
                "{{authBaseUrl}}"
              ],
              "path": [
                "api",
                "login"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Protected",
      "item": [
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{authBaseUrl}}/api/me",
              "host": [
                "{{authBaseUrl}}"
              ],
              "path": [
                "api",
                "me"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Users (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{authBaseUrl}}/api/users",
              "host": [
                "{{authBaseUrl}}"
              ],
              "path": [
                "api",
                "users"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Activity",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": {{activityUserId}},\n  \"eventType\": \"USER_ACTION\",\n  \"ipAddress\": \"127.0.0.1\",\n  \"userAgent\": \"PostmanRuntime\",\n  \"metadata\": \"{\\\"source\\\":\\\"postman\\\"}\"\n}"
            },
            "url": {
              "raw": "{{authBaseUrl}}/api/activity",
              "host": [
                "{{authBaseUrl}}"
              ],
              "path": [
                "api",
                "activity"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Recent Activity (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{authBaseUrl}}/api/activity/{{activityCount}}",
              "host": [
                "{{authBaseUrl}}"
              ],
              "path": [
                "api",
                "activity",
                "{{activityCount}}"
              ]
            }
          },
          "response": []
        }
      ]
    }
  ]
