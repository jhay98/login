      "key": "password",
      "value": "Test@1234"
    },
    {
      "key": "firstName",
      "value": "John"
    },
    {
      "key": "lastName",
      "value": "Doe"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "activityCount",
      "value": "10"
    },
    {
      "key": "activityUserId",
      "value": "1"
